# EmailJS Configuration (Recommended for Static Sites)
NEXT_PUBLIC_EMAILJS_SERVICE_ID=your_service_id
NEXT_PUBLIC_EMAILJS_TEMPLATE_ID=your_template_id
NEXT_PUBLIC_EMAILJS_PUBLIC_KEY=your_public_key

# Cloudflare Turnstile Configuration
NEXT_PUBLIC_TURNSTILE_SITE_KEY=your_site_key
TURNSTILE_SECRET_KEY=your_secret_key

# Alternative: Server-side SMTP (Only works with server hosting, not static sites)
# SMTP_HOST=smtp.hostinger.com
# SMTP_PORT=465
# SMTP_SECURE=true
# SMTP_USER=info@tpmhive.co.uk
# SMTP_PASS=your-email-password
# SMTP_FROM=info@tpmhive.co.uk
# CONTACT_EMAIL=info@tpmhive.co.uk
